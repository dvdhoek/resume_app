<%= form_for :jobs do |form| %>

    <%= form.label :start_date %>
    <%= form.date_field :start_date, type: 'Start Date' %>

    <%= form.label :end_date %>
    <%= form.date_field :end_date, type: 'End Date' %>

     <%= form.label :position %>
    <%= form.text_field :position, type: 'Position Title' %>   

    <%= form.label :company %>
    <%= form.text_field :company, type: 'Employer Name' %>

    <%= form.label :description %>
    <%= form.text_field :description, type: 'Tell us about your role & responsibilities' %>

    <%= form.label :location %>
    <%= form.text_field :location, type: 'Which city are you based in?' %>

    <%= form.label :link %>
    <%= form.text_field :link, type: 'Include a link to your portfolio' %>    

    <%= form.submit %>

<% end %>
