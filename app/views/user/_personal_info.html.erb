<div class="personal_info_form">
<h2 id="title">Personal Information</h2>
    <%= form_for :personal_info do |form| %>

        <%= form.label 'Date of Birth' %>
        <%= form.date_field :dob %><br>

        <%= form.label 'First Name' %>
        <%= form.text_field :first_name %><br>

        <%= form.label 'Last Name' %>
        <%= form.text_field :last_name %><br>

         <%= form.label 'Gender' %>
          <%= form.select :gender, options_for_select(
          
            [["Male", "Male"], 
            ["Female", "Female"],
            ["Other", "Other"]])%><br>

        <%= form.label 'Contact Number' %>
        <%= form.text_field :contact_number %><br>

        <%= form.label 'Street Address' %>
        <%= form.text_field :address_street  %><br>

        <%= form.label 'City' %>
        <%= form.text_field :address_city %><br>

        <%= form.label 'Country' %>
        <%= form.text_field :address_country %><br>  

        <%= form.submit %>

    <% end %>
</div>
